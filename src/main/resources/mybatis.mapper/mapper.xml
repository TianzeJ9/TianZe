<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thmy.mybat.mapper.UserMapper">
    <!-- mapper里的接口名 返回结果类型 实体类类型-->
    <select id="selectById" resultType="User">
        select * from mf.user where id = #{id}
    </select>
    <insert id="insert" parameterType="User">

        insert into mf.user (id, name, password, pid) values (#{id}, #{name}, #{password}, #{pid})
    </insert>
</mapper>